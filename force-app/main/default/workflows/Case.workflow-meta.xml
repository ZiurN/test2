    <rules>
        <fullName>Actualiza campo correo</fullName>
        <actions>
            <name>Actualiza_campo_correo</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Automatizacion para actualizar campo correo electronico del propietario del Em en caso</description>
        <formula>NOT(ISBLANK( Evento_Medico__c))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Actualiza campo correo asociado</fullName>
        <actions>
            <name>Correo_asociado</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Actualización de campo correo electrónico del asociado en el caso</description>
        <formula>NOT(ISBLANK(Account.PersonContact.Email))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Aportes</fullName>
        <actions>
            <name>Prioridad_alta</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Case.Sub_tipo__c</field>
            <operation>equals</operation>
            <value>Aportes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Reclamos</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Cambiar propietario legal</fullName>
        <actions>
            <name>Activar_SLA_Legal</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Si en el tipo de registro Legales, cambia el propietario activar check que activara proceso de asignacion</description>
        <formula>AND( ISCHANGED(  OwnerId   ),  No_reasigna_sla__c = FALSE, RecordType.Name = &quot;Expedientes legales&quot; )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Celula del evento medico</fullName>
        <actions>
            <name>Actualizar_tipo_de_ems_en_el_caso</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Automatizar tipo de evento al caso, para derivar a la celular del EMS</description>
        <formula>True</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Cerrar caso</fullName>
        <actions>
            <name>Actualiza_estado_caso</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Cierra casos de tipo solicitudes de alta familiar</description>
        <formula>AND( 				 RecordType.DeveloperName = &quot;Solicitud_de_alta_familiar&quot;, 				ISCHANGED(Informacion_completa__c),  				Informacion_completa__c)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Deriva a tesoreria</fullName>
        <actions>
            <name>Notificacion_derivacion_caso_tesorer_a</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Deriva_a_tesoreria</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(         ISCHANGED(Nro_de_solicitud_SS__c ),         NOT(ISBLANK(Nro_de_solicitud_SS__c)),          RecordType.DeveloperName = &quot;Interfaz_financiera&quot;,        ISPICKVAL(Type,&quot;t&quot;)  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Marca check cambio manual</fullName>
        <actions>
            <name>Cambio_manual_a_true_caso</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND (     NOT( Cambio_Manual__c ) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
