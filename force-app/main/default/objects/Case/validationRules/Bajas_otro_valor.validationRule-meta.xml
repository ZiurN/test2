<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bajas_otro_valor</fullName>
    <active>true</active>
    <description>No se permite un descuento de mayor a 20%</description>
    <errorConditionFormula>AND(
ISPICKVAL( Tipo_de_retencion__c , &quot;Economica&quot;),
Otro_valor__c &gt; 0.20
)</errorConditionFormula>
    <errorMessage>No se permite un descuento de mayor a 20%</errorMessage>
</ValidationRule>
